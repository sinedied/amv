{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["ES2022"],
    "skipLibCheck": true
  },
  "include": [
    "src/cli/**/*",
    "src/server/**/*"
  ],
  "exclude": [
    "src/web/**/*",
    "node_modules",
    "dist"
  ]
}
